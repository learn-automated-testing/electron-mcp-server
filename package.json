{
  "name": "electron-mcp-server",
  "version": "1.0.0",
  "description": "Electron MCP server for AI-powered desktop application testing with WebdriverIO",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "electron-mcp-server": "./dist/bin/cli.js"
